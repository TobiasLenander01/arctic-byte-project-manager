<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="360.0" prefWidth="300.0"
   xmlns="http://javafx.com/javafx/23.0.1"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dropalltables.controllers.CreateProjectWindowController">

   <children>
      <Label fx:id="labelHeader" layoutX="61.0" layoutY="22.0" text="Create new project">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>

      <Line endX="150.0" layoutX="150.0" layoutY="70.0" startX="-150.0" />

      <!-- Project number -->
      <Label layoutX="7.0" layoutY="97.0" text="Project number">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <TextField fx:id="textFieldProjectNo" layoutX="108.0" layoutY="95.0" promptText="Project #" />

      <!-- Project name -->
      <Label layoutX="7.0" layoutY="136.0" text="Project name">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <TextField fx:id="textFieldProjectName" layoutX="108.0" layoutY="133.0" promptText="Name" />

      <!-- Dates -->
      <Label layoutX="17.0" layoutY="176.0" text="Start date">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <DatePicker fx:id="datePickerStartDate" layoutX="108.0" layoutY="174.0" promptText="Start date" />

      <Label layoutX="17.0" layoutY="216.0" text="End date">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <DatePicker fx:id="datePickerEndDate" layoutX="108.0" layoutY="214.0" promptText="End date (optional)" />

      <!-- Buttons -->
      <Button fx:id="buttonOk" layoutX="108.0" layoutY="270.0" mnemonicParsing="false" onAction="#handleOkAction" text="OK" />
      <Button fx:id="buttonCancel" layoutX="183.0" layoutY="270.0" mnemonicParsing="false" onAction="#handleCancelAction" text="Cancel" />
   </children>
</AnchorPane>
