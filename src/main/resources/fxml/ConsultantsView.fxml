<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="552.0" prefWidth="943.0"
  xmlns="http://javafx.com/javafx/23.0.1"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dropalltables.controllers.ConsultantsViewController">

  <children>
    <!-- Title -->
    <Label layoutX="43.0" layoutY="20.0" text="Consultants">
      <font>
        <Font name="System Bold" size="16.0" />
      </font>
    </Label>

    <!-- Filter row -->
    <HBox layoutX="43.0" layoutY="50.0" spacing="10">
      <children>
        <Label text="No:" />
        <TextField fx:id="textFieldFilterNo" promptText="#" prefWidth="80" />

        <Label text="Name:" />
        <TextField fx:id="textFieldFilterName" promptText="Name" prefWidth="120" />

        <Label text="Title:" />
        <TextField fx:id="textFieldFilterTitle" promptText="Title" prefWidth="120" />
      </children>
    </HBox>

    <!-- Table -->
    <TableView fx:id="tableViewConsultants" layoutX="43.0" layoutY="80.0" prefHeight="400.0" prefWidth="402.0">
      <columns>
        <TableColumn fx:id="tableColumnConsultantNo" prefWidth="139.0" text="Consultant #" />
        <TableColumn fx:id="tableColumnConsultantName" prefWidth="120.0" text="Name" />
        <TableColumn fx:id="tableColumnConsultantTitle" prefWidth="120.0" text="Title" />
      </columns>
    </TableView>

    <!-- Buttons -->
    <Button layoutX="43.0" layoutY="500.0" onAction="#buttonCreateConsultantAction" text="Add consultant" />
    <Button layoutX="166.0" layoutY="500.0" onAction="#buttonDeleteConsultantAction" text="Delete consultant" />
    <Button layoutX="290.0" layoutY="500.0" onAction="#buttonEditConsultantAction" text="Edit consultant" />

    <!-- Consultant Info Box -->
    <Rectangle fx:id="consultantInfoBox" arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="200.0" width="320.0" layoutX="560.0" layoutY="80.0" stroke="BLACK" strokeType="INSIDE" />

    <!-- Info heading -->
    <Label layoutX="570.0" layoutY="90.0" text="Consultant Info">
      <font>
        <Font name="System Bold" size="14.0"/>
      </font>
    </Label>

    <!-- Labels inside box -->
    <Label fx:id="labelConsultantNo" layoutX="570.0" layoutY="120.0" text="No:" />
    <Label fx:id="labelConsultantName" layoutX="570.0" layoutY="150.0" text="Name:" />
    <Label fx:id="labelConsultantTitle" layoutX="570.0" layoutY="180.0" text="Title:" />
    <Label fx:id="labelConsultantAssignments" layoutX="570.0" layoutY="210.0" text="Assignments:" />
    <Label fx:id="labelConsultantHours" layoutX="570.0" layoutY="240.0" text="Total Hours:" />

  </children>

  <Label fx:id="labelConsultantCount" layoutX="43.0" layoutY="560" text="Total consultants: 0" style="-fx-font-weight: bold;" />
</AnchorPane>
